@import "../../app.wxss";
.tab-box {
	position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  background: #FFF;
}
.tab-box .tab-nav {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 40px;
  box-shadow: 0px 1px 8px 0px rgba(0,0,0,0.13);
}
.tab-nav .tab-item {
	flex: 1;
	line-height: 40px;
	font-size: 16px;
	display: flex;
	align-items: center;
	justify-content: center;
}
.tab-item-cur {
	color: #068a90;
}
.tab-content {
	padding: 0 20px;
}
.tab-content-item {
	height: 36px;
	display: flex;
	align-items: center;
	position: relative;
	font-size: 12px;
}
.popup {
	width: 100vw;
	height: 100vh;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 22;
	background: rgba(0,0,0,.7);
}
.hide {
	display: none;
}
.show {
	display: block;
}
.tab-item-cur .icon_arrow_down {
  background-image: url("data:image/png;base64,");
}
.tab-item-cur.tab-content-item {
	position: relative;
}
.tab-item-cur.tab-content-item::after {
	content: '';
  position: absolute;
  top: 15px;
  right: 0;
  width: 13px;
  height:13px;
  background-position: center;
  background-repeat: no-repeat;
  background-image:url('data:image/svg+xml;base64,');
  background-size: 100%;
}